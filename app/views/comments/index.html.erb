<%= image_tag Image.first.image(:original), class: 'image' %>

<div id="form-new">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h1 class="page-header">Make a New Comment</h1>
          <%= bootstrap_form_for @comment, url: comments_path do |f| %>

            <%= f.text_field :body %>
            <%# if current_user  %>
            <%= f.submit "Save", :id => 'save', class: "btn btn-success" %>
            <%= link_to "Dashboard", dashboard_index_path, class: "btn btn-default" %>
          <% end %>
        </div>
    </div>
  </div>
</div>


<div id="all-comments">
  <% @comments.each do |comment| %>
    <p id='comment-name'><%= current_user.name %> had this story to tell:</p>
    <h3><%= comment.body %></h3>
  <% end %>
</div>
