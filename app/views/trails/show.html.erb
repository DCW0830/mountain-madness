
<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-6' id='trail-info'>
      <div class="trail-info">
        <ul>
          <li><%= @trail.name %></li>
          <li><%= image_tag @trail.thumbnail, class: 'search-image' %></li>
          <li><%= link_to @trail.url %></li>
          <li><%= @trail.city %></li>
          <li><%= @trail.state %></li>
          <li><%= @trail.directions %></li>
          <li><%= @trail.lat %></li>
          <li><%= @trail.lon %></li>
          <li><%= @trail.description %></li>
          <li>This trail has a rating of <%= @trail.rating %> out of 5</li>
          <li>This trail is <%= @trail.distance %> miles long</li>
        </ul>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-6'>
      <div id="comments">
        <div id="new-comment">
          <%= form_for @comment do |f| %>
            <% f.label :body %>
            <%= f.text_field :body%>
            <%= f.label @trail %>
            <%= f.label @trail %>
            <%= f.submit "Add Comment" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
