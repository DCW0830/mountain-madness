<% unless @trails.nil? || @trails.empty? %>
  <ul>
    <% @trails.each do |trail| %>
      <div id='trail-info'>
        <li>Name:<%= trail.name %></li>
        <li>City:<%= trail.city %></li>
        <li>State:<%= trail.state %></li>
        <li>Directions:<%= trail.directions %></li>
        <li>Lattitude:<%= trail.lat %></li>
        <li>Longitude:<%= trail.lon %></li>
        <% unless trail.activities.nil? || trail['activities'].first.nil? %>
          <li><%= trail.activities.first['description'] %></li>
          <li>This trail has a rating of: <%= trail.activities.first['rating'] %> on a scale of 1-5.</li>
          <li>This trail is <%= trail.activities.first['length'] %> miles long.</li>
        <% end %>
        <%= form_tag trails_path, remote: true do %>
          <%= hidden_field_tag 'trail[unique_id]', trail.unique_id %>
          <%= hidden_field_tag 'trail[distance]', trail.name %>
          <%= hidden_field_tag 'trail[description]', trail.name %>
          <%= hidden_field_tag 'trail[name]', trail.name %>
          <%= hidden_field_tag 'trail[city]', trail.name %>
          <%= hidden_field_tag 'trail[state]', trail.name %>
          <%= hidden_field_tag 'trail[lat]', trail.name %>
          <%= hidden_field_tag 'trail[lon]', trail.name %>
          <%= hidden_field_tag 'trail[directions]', trail.name %>
          <%= submit_tag "LIKE", class: 'btn btn-default' %>
        <% end %>
      </div>
    <% end %>
  </ul>
<% end %>
